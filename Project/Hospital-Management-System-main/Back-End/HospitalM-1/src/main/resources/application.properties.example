# Hospital Management System - Database Configuration
# Copy this file to application.properties and update with your database credentials

spring.application.name=HospitalM-1

# Database Configuration
# Update these values according to your MySQL setup
spring.datasource.url=jdbc:mysql://localhost:3306/hospital_db?createDatabaseIfNotExist=true
spring.datasource.username=your_mysql_username
spring.datasource.password=your_mysql_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.open-in-view=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Server Configuration
server.port=8080
server.error.whitelabel.enabled=false

# Thymeleaf Configuration (if using)
spring.thymeleaf.cache=false

# Security Configuration (optional)
# Uncomment and configure if needed
# spring.security.user.name=admin
# spring.security.user.password=admin123
